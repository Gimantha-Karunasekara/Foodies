<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shadeOfBlack</item>
        <item name="colorSecondaryVariant">@color/shadeOfBlack</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Status bar color - https://stackoverflow.com/questions/22192291/how-to-change-the-status-bar-color-in-android-->
        <item name="android:navigationBarColor">@color/shadeOfBlack</item>
        <!-- Navigation bar color - https://stackoverflow.com/questions/27839105/android-lollipop-change-navigation-bar-color-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>